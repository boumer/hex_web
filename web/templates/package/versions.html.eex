<%= for release <- @releases do %>
  <li>
    <a href="<%= package_path(Endpoint, :show, @package, release, []) %>"><strong><%= release.version %></strong></a>
    <%= pretty_date(release.inserted_at) %>

    <%= if retirement = release.retirement do %>
      (<a href="<%= package_path(Endpoint, :show, @package, release, []) %>" class="version-retirement">retired</span></a>)
    <% else %>
      <%= if release.has_docs do %>
        (<a href="<%= raw HexWeb.Utils.docs_url(@package, release) %>">docs</a>)
      <% end %>
    <% end %>
  </li>
<% end %>
